<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis_a.test.EmployeeMapper">
	<select id="selectList" resultType="mybatis_a.test.Employee">
		SELECT * FROM TBL_EMPLOYEE WHERE ID = #{id}
	</select>
	<select id="getEmployeeById" resultType="mybatis_a.test.Employee">
		SELECT ID,LAST_NAME LASTNAME,EMAIL,GENDER FROM TBL_EMPLOYEE WHERE ID = #{id}
	</select>

	<select id="getEmployeeByLastName" resultType="mybatis_a.test.Employee">
		SELECT ID,LAST_NAME LASTNAME,EMAIL,GENDER FROM TBL_EMPLOYEE WHERE LAST_NAME = #{lastName}
	</select>
</mapper>