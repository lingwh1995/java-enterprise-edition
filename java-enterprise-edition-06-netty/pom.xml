<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.bluebridge</groupId>
        <artifactId>java-enterprise-edition</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>java-enterprise-edition-06-netty</artifactId>
    <packaging>pom</packaging>
    <modules>
        <module>chapter-01-01-jdk-bio</module>
        <module>chapter-01-02-jdk-nio</module>
        <module>chapter-01-03-jdk-aio</module>
        <module>chapter-02-01-netty-helloworld</module>
        <module>chapter-02-03-netty-future</module>
    </modules>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <netty.version>4.1.39.Final</netty.version>
        <lombok.version>1.18.0</lombok.version>
        <gson.version>2.8.5</gson.version>
        <guava.version>19.0</guava.version>
        <logback-classic.version>1.2.3</logback-classic.version>
        <protobuf-java.version>3.11.3</protobuf-java.version>
        <junit4.version>4.12</junit4.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- netty开始 -->
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-all</artifactId>
                <version>${netty.version}</version>
            </dependency>
            <!-- netty结束 -->

            <!-- lombok开始 -->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>
            <!-- lombk结束 -->

            <!-- gson开始 -->
            <dependency>
                <groupId>com.google.code.gson</groupId>
                <artifactId>gson</artifactId>
                <version>${gson.version}</version>
            </dependency>
            <!-- gson结束 -->

            <!-- guava开始 -->
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
            </dependency>
            <!-- guava结束 -->

            <!-- logback开始 -->
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-classic</artifactId>
                <version>${logback-classic.version}</version>
            </dependency>
            <!-- logback结束 -->

            <!-- protobuf-java开始 -->
            <dependency>
                <groupId>com.google.protobuf</groupId>
                <artifactId>protobuf-java</artifactId>
                <version>${protobuf-java.version}</version>
            </dependency>
            <!-- protobuf-java结束 -->

            <!-- junit开始 -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit4.version}</version>
            </dependency>
            <!-- junit结束 -->
        </dependencies>
    </dependencyManagement>
</project>