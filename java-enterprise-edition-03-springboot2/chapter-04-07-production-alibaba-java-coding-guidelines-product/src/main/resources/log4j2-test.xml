<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <!-- 日志输出格式 -->
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
        </Property>
        <!-- 日志文件路径 -->
        <Property name="LOG_HOME">./logs</Property>
    </Properties>

    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <!-- 测试环境输出TRACE及以上级别的日志 -->
            <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- INFO日志单独输出 -->
        <RollingFile name="RollingFileInfo"
                     fileName="${LOG_HOME}/info.log"
                     filePattern="${LOG_HOME}/info-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <!-- 每天滚动一次 -->
                <TimeBasedTriggeringPolicy/>
                <!-- 单个文件最大100MB -->
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <!-- 最多保留30个文件 -->
            <DefaultRolloverStrategy max="30" fileIndex="0"/>
        </RollingFile>

        <!-- ERROR日志单独输出 -->
        <RollingFile name="RollingFileError"
                     fileName="${LOG_HOME}/error.log"
                     filePattern="${LOG_HOME}/error-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <!-- 每天滚动一次 -->
                <TimeBasedTriggeringPolicy/>
                <!-- 单个文件最大100MB -->
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <!-- 最多保留30个文件 -->
            <DefaultRolloverStrategy max="30" fileIndex="0"/>
            <!-- 只记录ERROR级别日志 -->
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
        </RollingFile>
        
        <!-- 异步INFO日志输出 -->
        <Async name="AsyncInfo">
            <AppenderRef ref="RollingFileInfo"/>
        </Async>
        
        <!-- 异步ERROR日志输出 -->
        <Async name="AsyncError">
            <AppenderRef ref="RollingFileError"/>
        </Async>
    </Appenders>

    <Loggers>
        <!-- SQL日志级别 -->
        <Logger name="java.sql" level="DEBUG"/>

        <!-- Spring框架日志级别 -->
        <Logger name="org.springframework" level="INFO"/>

        <!-- MyBatis框架日志级别 -->
        <Logger name="org.mybatis" level="DEBUG"/>

        <!-- 连接池日志级别 -->
        <Logger name="com.zaxxer.hikari" level="INFO"/>
        <!-- 连接池详细配置信息 -->
        <Logger name="com.zaxxer.hikari.HikariConfig" level="INFO"/>
        <!-- 连接池运行时详细信息 -->
        <Logger name="com.zaxxer.hikari.pool.HikariPool" level="DEBUG"/>

        <!-- 打印Controller接口映射信息的关键配置：将RequestMappingHandlerMapping的日志级别设置为TRACE，以输出最详细的映射信息 -->
        <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="TRACE"/>
        <!-- 业务包日志级别 -->
        <Logger name="com.xa8bit" level="DEBUG"/>

        <!-- 日志输出级别,log4j2日志级别包括五个：TRACE < DEBUG < INFO < WARN < ERROR -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncInfo"/>
            <AppenderRef ref="AsyncError"/>
        </Root>
    </Loggers>
</Configuration>